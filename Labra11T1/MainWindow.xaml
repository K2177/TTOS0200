<Window x:Class="Labra11T1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labra11T1"
        mc:Ignorable="d"
        Title="Shopping List" Height="300" Width="300">
    <Grid>
        <CheckBox x:Name="Milk" Content="Milk" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <CheckBox x:Name="Butter" Content="Butter" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
        <CheckBox x:Name="Chicken" Content="Chicken" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <CheckBox x:Name="Beer" Content="Beer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <CheckBox x:Name="Lemonade" Content="Lemonade" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <Button x:Name="Buy" Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="10,110,0,0" Click="Buy_Click"/>
        <TextBox x:Name="List" HorizontalAlignment="Left" Height="124" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Margin="10,135,0,0"/>
    </Grid>
</Window>