<Window x:Class="Labra10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labra10"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="Trucks" Content="Trucks" HorizontalAlignment="Left" Height="40" Margin="115,69,0,0" VerticalAlignment="Top" Width="100" Click="Trucks_Click" FontWeight="Bold" FontSize="24"/>
        <Button x:Name="Cars" Content="Cars" HorizontalAlignment="Left" Height="40" Margin="220,69,0,0" VerticalAlignment="Top" Width="100" FontSize="24" FontWeight="Bold" Click="Cars_Click"/>
        <TextBlock x:Name="TrucksNum" HorizontalAlignment="Left" Height="40" Margin="115,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" FontSize="36" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock x:Name="CarsNum" HorizontalAlignment="Left" Height="40" Margin="220,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" FontSize="36" FontWeight="Bold" TextAlignment="Center"/>
    </Grid>
</Window>
